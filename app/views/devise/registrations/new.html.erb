<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <h2>Sign up</h2>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
  </div>

  <div class="form-group">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Пароль", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Повторите пароль", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Регестрация", class: "btn btn-primary" %>
  </div>

  <%= render "devise/shared/links" %>
<% end %>
