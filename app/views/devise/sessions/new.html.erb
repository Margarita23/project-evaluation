<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <h2>Войти</h2>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Пароль", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Вход", class: "btn btn-primary" %>
  </div>

  <%= render "devise/shared/links" %>
<% end %>
