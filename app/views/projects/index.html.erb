<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.user %></td>
        <td><%= link_to 'Посмотреть', project %></td>
        <td><%= link_to 'Изменить', edit_project_path(project) %></td>
        <td><%= link_to 'Удалить', project, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Создать проект', new_project_path, class: "btn btn-primary" %>
